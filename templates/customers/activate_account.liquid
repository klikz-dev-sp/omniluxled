<section data-template="account" class="section-content" style="min-height: 49vh;">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-md-6 col-lg-5 mx-auto">

        <div id="customerLoginForm">
          {% form 'activate_customer_password' %}

            <h3 class="mb-3 text-center">{{ 'customer.activate_account.title' | t }}</h3>

            {% if form.errors %}
            <div class="alert alert-warning">
              {{ form.errors | default_errors }}
            </div>
            {% endif %}
            <div class="form-group form-floating">
              <input type="password" value="" name="customer[password]" aria-label="password" id="CustomerPassword" class="form-control" placeholder="{{ 'customer.activate_account.password' | t }}">
              <label for="CustomerPassword">{{ 'customer.activate_account.password' | t }}</label>
            </div>
            <div class="form-group form-floating">
              <input type="password" value="" name="customer[password_confirmation]" aria-label="password confirmation" id="CustomerPasswordConfirmation" class="form-control" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
              <label for="CustomerPasswordConfirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
            </div>
            <input type="submit" class="btn btn-primary btn-block text-uppercase" value="{{ 'customer.activate_account.submit' | t }}">

          {% endform %}
        </div>

      </div>
    </div>
  </div>
</section>

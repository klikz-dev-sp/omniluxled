{% assign mobileImage = section.settings.image_mobile %}
<section
  data-section-id="{{ section.id }}"
  data-type="slider"
  class="image-hero overflow-hidden {{ section.settings.custom_class }}"
  tallheight="">
  <span
    class="gradient-fair-tone position-absolute w-100 start-0 top-0 overflow-hidden"
    style="pointer-events: none;z-index: -1;">
    <span
      class="white-anim"></span>
  </span>
  <div class="container-fluid px-0">
    <div
      class="image-hero-desktop tallheight ">
      <div
        class="">
        <div
          class="swiper-slide d-flex {% if section.settings.content_position != "1" %} align-items-end {% endif %}"
          data-slide-type="image">
          <picture>
            {%- if mobileImage.width >= 375 -%}<source
                media="(max-width: 375px)"
                srcset="{{ mobileImage | image_url: width: 375}}">{%- endif -%}
            {%- if mobileImage.width >= 550 -%}<source
                media="(max-width: 550px)"
                srcset="{{ mobileImage | image_url: width: 550 }}">{%- endif -%}
            {%- if mobileImage.width >= 767 -%}<source
                media="(max-width: 767px)"
                srcset="{{ mobileImage | image_url: width: 767}}">{%- endif -%}
            {%- if section.settings.image_desktop.width >= 991 -%}<source
                media="(max-width: 991px)"
                srcset="{{ section.settings.image_desktop | image_url: width: 991 }}">{%- endif -%}
            {%- if section.settings.image.width >= 1200 -%}<source
                media="(max-width: 1200px)"
                srcset="{{ section.settings.image_desktop | image_url: width: 1200 }}">{%- endif -%}
            {%- if section.settings.image.width >= 1500 -%}<source
                media="(max-width: 1500px)"
                srcset="{{ section.settings.image_desktop | image_url: width: 1500 }}">{%- endif -%}
            {%- if section.settings.image.width >= 1720 -%}<source
                media="(max-width: 1720px)"
                srcset="{{ section.settings.image_desktop | image_url: width: 1720 }}">{%- endif -%}
            {%- if section.settings.image.width >= 1920 -%}<source
                media="(max-width: 1920px)"
                srcset="{{ section.settings.image_desktop | image_url: width: 1920 }}">{%- endif -%}
            {%- if section.settings.image.width >= 2560 -%}<source
                media="(max-width: 2560px)"
                srcset="{{ section.settings.image_desktop | image_url: width: 2560 }}">{%- endif -%}
            {%- if section.settings.image.width >= 3800 -%}<source
                media="(max-width: 3800px)"
                srcset="{{ section.settings.image_desktop | image_url: width: 3800 }}">{%- endif -%}
            <img
              class="media-wrap"
              src="{{ section.settings.image_desktop | image_url }}"
              {% unless forloop.first %}loading="lazy"{% endunless %}
              alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
              width="{{ section.settings.image.width }}"
              {% unless forloop.first %}loading="lazy"{% endunless %}
              height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio | round }}">
          </picture>
          <div
            class="content w-100 media-text-wrap">
            <div
              class="container px-0 text-center text-md-start">
              <div
                class="row mx-auto col-md-11 col-lg-10 col-12 px-0 pt-xl-14 pb-xl-10 py-lg-10 mb-xl-2 py-md-5 py-10 justify-content-start">
                <div
                  class="col-xl-6 col-lg-6 col-md-6 col-12 pe-0 ps-0 ">
                  <h2
                    class="h1 px-4 px-md-0 heading_txt mb-3">{{ section.settings.title }}</h2>
                  <p
                    class="px-4 px-md-0 caption_txt fw-normal mb-1 pb-2"
                    style="color: #ffffff;">{{ section.settings.subtitle }}</p>
                  <a
                    href="{{ section.settings.btn_link }}"
                    class="btn btn-white mt-3 px-10">{{ section.settings.btn_text }}</a>
                </div>
              </div>
            </div>
          </div>
          <div class="overlay"></div>
        </div>
      </div>
    </div>
  </div>
</section>

{{ 'global-image-hero.css' | asset_url | stylesheet_tag }}
{{ 'global-video-with-text.css' | asset_url | stylesheet_tag }}

{% schema %}
  {
    "name": "Image Hero Low Text",
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Desktop Image",
        "info": "For Better Viewing Use Example dimentions: 3757*1794 ( Aspect Ratio: 2.09:1 )"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image",
        "info": "For Better Viewing Use Example dimentions: 875*1807 ( Aspect Ratio: 0.48:1 )"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Sub Title"
      }, {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      }, {
        "type": "select",
        "id": "content_position",
        "label": "Content Position",
        "options": [
          {
            "value": "1",
            "label": "Up"
          }, {
            "value": "2",
            "label": "Down"
          }
        ],
        "default": "1"
      }, {
        "type": "text",
        "id": "custom_class",
        "label": "Custom Class"
      }
    ],
    "presets": [
      {
        "name": "Image Hero Low Text",
        "category": "Content"
      }
    ]
  }
{% endschema %}
{{ 'general-page.css' | asset_url | stylesheet_tag }}
<section class="border-bottom">
  <span class="account-fair-tone gradient-fair-tone position-absolute w-100 start-0 top-0 overflow-hidden" style="pointer-events: none;z-index: -1;">
  </span>
  <div class="container">
      <div class="row">
        <div class="section-content col-12 px-sm-4 text-center ">
          <h1 class="page-title">{{ page.title }}</h1>
        </div>
      </div>
  </div>
</section>
<section>
  <div class="container ">
    <div class="row">
      {% if page.content != blank %}
      <div class="col-lg-11 col-12 ms-auto section-content">
        <div class="rte ">{{ page.content }}</div>
      </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "spaced-section"
}
{% endschema %}

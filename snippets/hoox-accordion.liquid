<article class="hoox-accordion">
  <div class="hoox-accordion__header">
    <h3 class="hoox-accordion__title">
      {{ hooxFaqQuestion }}
    </h3>
    <button class="hoox-accordion__button">
      <div class="hoox-accordion__button-open">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M11 5L12 5L12 20L11 20L11 5Z" fill="black" />
          <path d="M4 13V12H19V13H4Z" fill="black" />
        </svg>
      </div>

      <div class="hoox-accordion__button-close">
        <svg width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M4 13.3999V12.3999H19V13.3999H4Z" fill="black"/>
        </svg>
      </div>
    </button>
  </div>

  <div class="hoox-accordion__panel">
    <p>
      {{ hooxFaqAnswer }}
    </p>
  </div>
</article>

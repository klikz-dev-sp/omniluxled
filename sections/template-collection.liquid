      "default": true,
      "label": "t:sections.template-collection.settings.enable_filtering.label",
      "info": "t:sections.template-collection.settings.enable_filtering.info"
    },
    {
      "type": "select",
      "id": "filter_type",
      "label": "Filter Type",
      "options": [

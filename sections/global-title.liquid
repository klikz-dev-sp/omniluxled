<section class="section-content overflow-hidden position-relative global-results-slider border-top py-lg-10 pt-7 pb-0 {{ section.settings.css_class }}" data-section-id="{{ section.id }}" style="background: {{ section.settings.section_bg_color }}; color:{{ section.settings.section_text_color }}">
    <div class="{% if section.settings.fluid_layout %}container-fluid px-0{% else %}container{% endif %} mb-4 mb-lg-3 pb-1 pt-1 pt-lg-0">
      <div class="text-center heading_txt pt-1 d-flex align-items-center justify-content-lg-between justify-content-center" style="z-index: 2;">

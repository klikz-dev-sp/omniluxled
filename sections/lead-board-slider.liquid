<link rel="stylesheet" href="{{ 'lead-board-experts-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<section id="lead-board-slider" class="lead-text {% if section.settings.bg_tone %}position-relative{% endif %}" data-section-id="{{ section.id }}">
    {% if section.settings.bg_tone %}
        <div class="">
            <span class="lead-board-experts gradient-fair-tone light-tone-top position-absolute w-100 start-0 overflow-hidden" style="pointer-events: none;z-index: -1;">
                <span class="white-anim"></span>
            </span>
        </div>
    {% endif %}
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        <div class="row">
            <div class="col-lg-9 col-12 mx-auto text-center">
                {% if section.settings.title != blank %}
                <h3 class="">{{ section.settings.title }}</h3>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-12 mx-auto">
                {% if section.blocks.size > 0 %}
                <slider-element class="d-block" >
                    <div class="swiper swiper-slider header-slider-desktop {{ section.settings.height }}" data-slider='{
                        "observer": true,
                        "observeParents": true,
                        "loop": true,
                        "grabCursor": true,
                        "navigation": {
                            "nextEl": ".results-slider-button-next",
                            "prevEl": ".results-slider-button-prev"
                        },
                        "pagination": {
                            "el": ".swiper-pagination"
                        }
                      }'>
                        <div class="swiper-wrapper pb-11">
                            {% for block in section.blocks %}
                                    <div class="swiper-slide d-flex align-items-center slide-{{ block.id }}"
                                         {{ block.shopify_attributes }}
                                        data-block-id="{{ block.id }}"
                                        data-slide-type="image">
                                        <div class="mt-4 w-100">
                                            <div class="row justify-content-center">
                                                <div class="col-xl-6 col-lg-6 col-12 d-flex flex-column justify-content-center order-2 text-center order-lg-1 text-lg-start">
                                                    {% if block.settings.heading_txt != blank %}
                                                        {{ block.settings.heading_txt }}
                                                    {% endif %}
                                                    <div class="mt-3">
                                                        {% if block.settings.expert_name != blank %}
                                                            <div class="h5">{{ block.settings.expert_name }}</div>
                                                        {% endif %}
                                                        {% if block.settings.expert_postion != blank %}
                                                            <p class="fw-normal lh-1">{{ block.settings.expert_postion }}</p>
                                                        {% endif %}
                                                        {%- if block.settings.button_label_1 != blank -%}
                                                          <div class="mt-6">
                                                            <a href="{{ block.settings.button_link_1 }}" class="btn btn{% if block.settings.btn_type_1 == 'outline' %}-{% endif %}{{ block.settings.btn_type_1 }}-{{ block.settings.btn_variant_1 }} {{ block.settings.btn_size_1 }}">{{ block.settings.button_label_1 | escape }}</a>
                                                          </div>
                                                          {%- endif -%}
                                                    </div>
                                                </div>
                                                <div class="col-xl-4 col-lg-6 col-12 order-1 mb-4 mb-lg-0 order-lg-2">
                                                    {% if block.settings.image != blank %}
                                                        <div class="square-card position-relative  {% if block.settings.brfore_aftertext %}before-text{% endif %}">
                                                            <img
                                                            srcset="
                                                            {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360, format: 'pjpg' }} 360w,{%- endif -%}
                                                            {%- if block.settings.image.width >= 520 -%}{{ block.settings.image | image_url: width: 520, format: 'pjpg' }} 520w,{%- endif -%}
                                                            {%- if block.settings.image.width >= 650 -%}{{ block.settings.image | image_url: width: 650, format: 'pjpg' }} 650w,{%- endif -%}
                                                            {%- if block.settings.image.width >= 780 -%}{{ block.settings.image | image_url: width: 780, format: 'pjpg' }} 780w,{%- endif -%}"
                                                            src="{{ block.settings.image | image_url: width: 20, format: 'pjpg' }}"
                                                            sizes="(min-width: 992px) 50vw, 100vw"
                                                            alt="{{ block.settings.expert_name | escape }}"
                                                            class="h-100 top-0 start-0 position-absolute object-cover w-100"
                                                            loading="lazy"
                                                            width="{{ block.settings.image.width | divided_by: 3 }}"
                                                            height="{{ block.settings.image.height | divided_by: 3 }}"
                                                        >
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            {% endfor %}
                        </div>
                        <div class="position-absolute experts-slider-buttons  start-0 end-0 mx-auto d-inline-flex">
                            <div class="swiper-button-next results-slider-button-next ox-arrow-right" tabindex="0" role="button" aria-label="Next slide" aria-controls="swiper-wrapper-2a93c966f0da23ed"></div>
                            <div class="swiper-button-prev results-slider-button-prev ox-arrow-left" tabindex="0" role="button" aria-label="Previous slide" aria-controls="swiper-wrapper-2a93c966f0da23ed"></div>
                        </div>
                    </div>
                </slider-element>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Lead Board Experts Slider",
  "class": "lead-board-experts-slider",
  "settings": [
    {
      "type": "header",
      "content": "STYLING"
    },
    {
      "type": "checkbox",
      "id": "fluid_layout",
      "label": "Full Width Layout?",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "bg_tone",
      "label": "Background Tone",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing & Border"
    },
    {
      "type": "range",
      "id": "pt",
      "label": "Padding Top(Desktop)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 80
    },
    {
      "type": "range",
      "id": "pb",
      "label": "Padding Bottom(Desktop)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 40
    },
    {
      "type": "range",
      "id": "pts",
      "label": "Padding Top(Mobile)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 40
    },
    {
      "type": "range",
      "id": "pbs",
      "label": "Padding Bottom(Mobile)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 40
    },
    {
      "type": "checkbox",
      "id": "border-top",
      "label": "Border Top?",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "border-bottom",
      "label": "Border Bottom?",
      "default": false
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Aesthetic Experts  Block",
      "settings": [
        {
          "type": "richtext",
          "id": "heading_txt",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "expert_name",
          "label": "Experts Name"
        },
        {
          "type": "textarea",
          "id": "expert_postion",
          "label": "Experts Position"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Expert Image",
          "info": "For Better Viewing Use Example dimentions: 221*40 ( Aspect Ratio: 5.53:1 )"
        },
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Button label",
          "label": "t:sections.image-banner.blocks.buttons.settings.button_label_1.label",
          "info": "t:sections.image-banner.blocks.buttons.settings.button_label_1.info"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "t:sections.image-banner.blocks.buttons.settings.button_link_1.label"
        },
        {
          "type": "select",
          "id": "btn_type_1",
          "label": "Button Type",
          "options": [
            {
              "value": "outline",
              "label": "Outline"
            },
            {
              "value": "",
              "label": "Solid"
            }
          ],
          "default": ""
        },
        {
          "type": "select",
          "id": "btn_variant_1",
          "label": "Button Variant",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "white",
              "label": "White"
            },
            {
              "value": "dark",
              "label": "Dark"
            }
          ],
          "default": "primary"
        },
        {
          "type": "select",
          "id": "btn_size_1",
          "label": "Button Size",
          "options": [
            {
              "value": "",
              "label": "Default"
            },
            {
              "value": "btn-sm",
              "label": "Small"
            },
            {
              "value": "btn-lg",
              "label": "Large"
            }
          ],
          "default": ""
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lead Board Experts Slider",
      "category": "Content"
    }
  ]
}
{% endschema %}
<style>
  [data-section-id="{{ section.id }}"]
  {
    padding-top: {{ section.settings.pts }}px;
    padding-bottom: {{ section.settings.pbs }}px;
    {% if section.settings.border-top %}
    border-top: 1.5px solid {{ section.settings.section_txt_color }};
    {% endif %}
    {% if section.settings.border-bottom %}
    border-bottom: 1.5px solid {{ section.settings.section_txt_color }};
    {% endif %}
  }
  @media (min-width:992px)
  {
    [data-section-id="{{ section.id }}"]
    {
      padding-top: {{ section.settings.pt }}px;
      padding-bottom: {{ section.settings.pb }}px;
    }
  }
</style>

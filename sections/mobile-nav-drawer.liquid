                                {% if section.settings.social_icon_instagram %}
                                <li class="list-inline-item">
                                    <a href="{{ settings.social_instagram_link }}" title="Instagram" rel="nofollow" aria-label="Instagram"><span class="ox-instagram"></span></a>
                                </li>
                                {% endif %}
                                {% if section.settings.social_icon_facebook %}

            <{% if section.settings.btn_link3 != blank %}a{% else %}span{% endif %} {% if section.settings.btn_link3 != blank %} href="{{ section.settings.btn_link3 }}" {% endif %}class="btn w-sm-auto w-100 d-lg-inline-flex d-none btn{% if section.settings.btn_type3 == 'outline' %}-{% endif %}{{ section.settings.btn_type3 }}-{{ section.settings.btn_variant3 }} {{ section.settings.btn_size3 }}" title="{{ section.settings.btn_txt }}">{{ section.settings.btn_txt3 }}</{% if section.settings.btn_link3 != blank %}a{% else %}span{% endif %}>
                  </div>
                    {% endif %}
    </div>
  {% if section.settings.btn_txt != blank %}
    <div class="{% if section.settings.fluid_layout %}container-fluid px-0{% else %}container{% endif %} d-lg-none pb-1">
        <div class="text-center mb-4 pt-4 mt-1 heading_txt pb-xl-0 pb-2">

                                                loading="lazy"
                                                data-feauredImage
                                                alt="{{ megaMenuBlock.story_link_text | escape }}"
                                                width="{{ megaMenuBlock.story_image.width }}"
                                                height="{{ megaMenuBlock.story_image.height }}"
                                            > 
                                            {%- else -%}

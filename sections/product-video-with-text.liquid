{%- if section.settings.display_for_this_product == 'true' -%}
<link rel="stylesheet" href="{{ 'global-video-with-text.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'global-video-with-text.css' | asset_url | stylesheet_tag }}</noscript>

<section class="{% unless section.settings.fluid_layout %}section-content{% endunless %} video-with-text {% if section.settings.disable_min_height %}disable_min_height{% endif %} {{ section.settings.css_class }}" data-section-id="{{ section.id }}">
        {% if section.settings.enable_background_tone %}
    <span class="gradient-fair-tone light-tone-top position-absolute w-100 start-0 overflow-hidden" style="pointer-events: none;z-index: -1;">
        <span class="white-anim"></span>
    </span>
    {% endif %}
  
  <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        <div class="custom-video-container d-flex flex-column {% if section.settings.fluid_video_layout %} full-video-layout position-relative{% else %}row align-items-center{% endif %}">
            <div class="{% if section.settings.fluid_video_layout %}px-0{%else%}col-12 col-md-6 col-lg-7 {% endif %}">
                <custom-video{% if section.settings.video_id != '' %}s{% endif %} class="video-with--text position-relative d-block placement--{{ section.settings.placement }}"
                    data-loop="{{ section.settings.loop }}" data-autoplay="true" data-controls="{{ section.settings.controls }}" data-muted="{{ section.settings.muted }}"
                   data-mmww data-video-type="{{ product.metafields['custom']['vwt_video_type'] }}"  data-placement="{{ section.settings.placement }}"
                    {% if section.settings.mobile_bg_video != blank %}data-mobileVideo="{{ section.settings.mobile_bg_video }}"{% endif %} data-video-id="{{ section.settings.bg_video }}">
                    <div class="cta-btn">
                        <button class="play__button btn btn-primary" data-trigger-video aria-label="{{ 'sections.video-with-text.play_video' | t }}">
                            <span class="icon-play"></span>
                        </button>
                        <button class="bg-transparent border-2 border-white btn btn-primary p-3 pause__button rounded-pill d-none" data-pause-video aria-label="{{ 'sections.video-with-text.paused_video' | t }}">
                            <span class="ox-play" style="position: relative;right: -2px;"></span>
                        </button>
                    </div>
                    <div class="content-section">
                        <div class="poster-image {{ section.settings.height }}">
                            {%- if section.settings.poster_type == 'video' and section.settings.bg_video != blank -%}
                                <video class="h-100 object-cover position-absolute start-0 top-0 w-100" data-posterVideo preload="yes" playsinline muted loop data-mobileSrc="{{ section.settings.mobile_bg_video }}">
                                    <source src="{{ section.settings.bg_video }}" type="video/mp4">
                                </video>
                            {%- elsif section.settings.poster_image != blank -%}
                            <img
                                
                                src="{{ section.settings.poster_image }}"
                               
                                alt="{{ section.settings.poster_image.alt | escape }}"
                                class="hidemobile h-100 object-cover position-absolute start-0 top-0 w-100"
                                loading="lazy"
                                width="{{ section.settings.poster_image.width | divided_by: 3 }}"
                                height="{{ section.settings.poster_image.height | divided_by: 3 }}"
                            >
                              <img
                                
                                src="{{ section.settings.poster_image }}"
                               
                                alt="{{ section.settings.image_mobile.alt | escape }}"
                                class="hidedesktop h-100 object-cover position-absolute start-0 top-0 w-100"
                                loading="lazy"
                                width="{{ section.settings.image_mobile.width | divided_by: 3 }}"
                                height="{{ section.settings.image_mobile.height | divided_by: 3 }}"
                            >

                            {%- else -%}
                         
                            <img 
                                src="{{ settings.no_image | image_url: width: 1500 }}" loading="lazy"
                                
                                alt="{{ settings.no_image.alt | default: section.settings.title | escape }}"
                                width="{{ settings.no_image.width }}"
                                height="{{ settings.no_image.width | divided_by: settings.no_image.aspect_ratio | round }}"
                            >
                            {%- endif -%}
                        </div>
                    </div>
                    {%- if section.settings.placement == 'grid' -%}
                        <div class="video-section {{ section.settings.height }}" tabindex="0"></div>
                    {%- endif -%}
                    {% if section.settings.disable_overlay %}
                                <div class="poster-overlay" style="background-color: {{ section.settings.overlay_bg_color }}!important; opacity: {{ section.settings.overlay_opacity }}!important;"></div>
                    {% endif %}
                </custom-video{% if section.settings.video_id != '' %}s{% endif %}>
            </div>
            <div class="{% if section.settings.fluid_video_layout %}position-absolute d-flex h-100 align-items-center full-video-caption text-center{% else %}col-12 col-md-6 col-lg-5 mt-4 mt-md-0{% endif %}">
                <div class="inside-block mx-auto {{ section.settings.alignment }} {% if section.settings.fluid_video_layout %}d-flex {{ section.settings.video_alignment }}{% endif %} w-100" style="color:{{ section.settings.section_text_color }}">
                    {% if section.settings.fluid_video_layout %}
                        <div class="col-lg-7 col-md-8 px-md-0 px-3">
                    {% endif %}
                    {% if section.settings.title != blank %}
                        <h2 class="mb-3">{{ section.settings.title }}</h2>
                    {% endif %}
                    {% if section.settings.subtitle != blank %}
                        <div class="mb-4 px-lg-9 px-md-5">{{ section.settings.subtitle }}</div>
                    {% endif %}
                    
                    <div class="pt-3">
                        {%- comment -%}
                        {% if section.settings.fluid_video_layout %}
                            <span data-trigger-videobtn  class="cursor-pointer btn btn{% if section.settings.btn_type == 'outline' %}-{% endif %}{{ section.settings.btn_type }}-{{ section.settings.btn_variant }} {{ section.settings.btn_size }}" title="{{ 'sections.video-with-text.play_video' | t }}">{{ 'sections.video-with-text.play_video' | t }}</span>
                        {% endif %}
                        {%- endcomment -%}
                        {% if section.settings.btn_txt_watch != blank %}
                           

                            

                            <custom-video data-mm="{{ product.metafields['custom']['vwt_video_type'] }}" class="video-with--text position-relative d-block placement--popup"
                                data-loop="true" data-autoplay="true" data-controls="true" data-muted="false"
                                data-video-type="{{ product.metafields['custom']['vwt_video_type'] }}"  data-placement="popup"
                                {% if section.settings.mobile_video_id != blank %}data-mobileVideo="{{ section.settings.mobile_video_id }}"{% endif %} 
                                data-video-id="{{ section.settings.video_id }}">

                                {% if section.settings.btn_txt_watch != '' %}
                               <span data-trigger-videobtn role="button" aria-label="{{ section.settings.btn_txt_watch }}" class="cursor-pointer ls-0 fw-semibold text-white bg-transparent text-capitalize  btn {% if section.settings.btn_type_watch == "border-0" %}border-0{% endif %} btn{% if section.settings.btn_type_watch == 'outline' %}-{% endif %}{% if section.settings.btn_type_watch != "border-0" %}{{ section.settings.btn_type_watch }}{% endif %}-{{ section.settings.btn_variant_watch }} {{ section.settings.btn_size_watch }}" title="{{ section.settings.btn_txt_watch }}" style="font-size:16px;">
                                    {{ section.settings.btn_txt_watch }}
                                    <i class="ox-play ms-2" style="font-size:11px;"></i>
                                </span>
                                  {% endif %}

                                <div class="cta-btn d-none">
                                    <button class="play__button btn btn-primary" data-trigger-video aria-label="{{ 'sections.video-with-text.play_video' | t }}">
                                        <span class="icon-play"></span>
                                    </button>
                                    <button class="bg-transparent border-2 border-white btn btn-primary p-3 pause__button rounded-pill d-none" data-pause-video aria-label="{{ 'sections.video-with-text.paused_video' | t }}">
                                        <span class="ox-play" style="position: relative;right: -2px;"></span>
                                    </button>
                                </div>
                            </custom-video>
                            {% endif %}
                        {% if section.settings.btn_txt != blank %}
                            <a {% if section.settings.btn_link %} href="{{ section.settings.btn_link }}" {% endif %}class="btn btn{% if section.settings.btn_type == 'outline' %}-{% endif %}{{ section.settings.btn_type }}-{{ section.settings.btn_variant }} {{ section.settings.btn_size }}" title="{{ section.settings.btn_txt }}">{{ section.settings.btn_txt }}</a>
                        {% endif %}

                    </div>
                    {% if section.settings.fluid_video_layout %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
{%- endif -%}

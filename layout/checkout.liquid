    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            <div class="custom-message">
              <b>Please review your cart carefully to ensure all information is correct.</b><br />
              <small>Once your order is submitted, we will be unable to make changes.</small>
              <br/>
              <small>Please allow 2-3 business days for your order to ship out of our warehouse.</small>
            </div>
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
    

  <script>
    (function($) {
      $(document).on("page:load", function() {
        if (Shopify.Checkout.step === "contact_information" ||
            Shopify.Checkout.step === "shipping_method" ||
            Shopify.Checkout.step === "payment_method"
           ) {
          $(".main__content .custom-message").show();

        } else {
          $(".main__content .custom-message").hide();
        }
      });
    })(Checkout.$);

  </script>


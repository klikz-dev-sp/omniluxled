{{ 'hoox-press.css' | asset_url | stylesheet_tag }}

{% liquid
  assign title = section.settings.title
%}

<section class="hoox-press">
  <div class="l">
    <div class="hoox-press__content-wrapper">
    {% if title != blank %}
      <h2 class="hoox-press__title c-title c-title-color--secondary">{{ title }}</h2>
    {% endif %}

    <div class="hoox-press__content">
      <div class="loop-trust-animation">
        {% for i in (1..3) %}
          <div class="hoox-press__wrapper">
            {% if section.blocks.size > 0 %}
              <div class="hoox-press__items">
                {% for block in section.blocks %}
                  {% liquid
                    assign logo = block.settings.image
                  %}

                  {% if logo != blank %}
                    {% render 'hoox-snippet-image', image: logo %}
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
</section>

{% comment %}JS FILE{% endcomment %}

{% schema %}
{
  "name": "Hoox Press",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "logos",
      "name": "Logos",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hoox Press"
    }
  ]
}
{% endschema %}

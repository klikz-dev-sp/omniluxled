{% if section.settings.enable %}
    <section data-section-id="{{ section.id }}" class="pb-11 section-faq" id="{{ section.settings.heading | handleize }}">
        <div class="container">
            <div class="row">
                <div class="col-12">
                  <div class="block-heading">
                      <h4 class="fw-medium lh-base letter-spacing mb-0 text-center">{{ section.settings.heading }}</h4>
                  </div>
                  <div class="row justify-content-center my-5">
                    <div class="col-12 col-lg-7 col-md-7 mb-5">
                      <div data-faq-section>
                        <custom-accordion {{ block.shopify_attributes }} data-accordionType="single">
                            {% for block in section.blocks %}
                                {% if block.settings.title != blank and block.settings.answer != blank %}
                                    <div>
                                        <div class="accordion__container border-bottom border-dark py-3">
                                            <a class="accordion__toggle d-flex align-items-center pe-2 justify-content-between" href="javascript:void(0);" title="Open {{ block.settings.title | strip_html }}" rel="nofollow" aria-label="Open {{ block.settings.title | strip_html }}" role="button" aria-expanded="false" aria-controls="faq-{{ section.settings.heading | handleize }}-{{ forloop.index }}">
                                                <h6 class="font-size-lg lh-base fw-bold font-family-base letter-spacing mb-0">{{ block.settings.title }}</h6>
                                                <span class=" d-flex justify-content-center align-items-center font-size-xs">
                                                  <span class="ox-plus trn"></span>
                                                  <span class="ox-minus position-absolute trn"></span>
                                                </span>
                                            </a>
                                            <div class="accordion__block toggle-content" id="faq-{{ section.settings.heading | handleize }}-{{ forloop.index }}" data-type="content">
                                                <div class="fw-light letter-spacing rpt-5 pt-4">{{ block.settings.answer }}</div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </custom-accordion>
                      </div>
                      <div class="mt-3 text-end">
                        <a target="_blank" href="https://omniluxled.com/pages/new-help-center" class="text-decoration-underline">See More</a>
                      </div>
                    </div>
                    <div class="col-12 col-lg-5 col-md-5 px-3">
                      <div class="col-12 p-4 bg-white">
                        <div class="font-size-xl lh-base fw-bold font-family-base letter-spacing mb-3">Have Any Questions?</div>
                        <div class="font-family-base ">Chat with our customer support team.</div>
                        <div class="font-family-base mb-3">Monday - Sunday 9am to 9pm (EST).</div>
                        <div class="d-flex mb-3 fw-bold"><a id="gorgias-chat-start" class="text-decoration-underline">Start Chart<img class="ms-1" src="{{ 'rocketchat.svg' | asset_url }}"/></a></div> 
                        <div class="font-family-base mb-3">You can also contract us via phone or email:</div>
                        <div class="d-flex font-family-base"><img src="{{ 'phone.svg' | asset_url }}"/><span class="ms-1">(855) 668-7574</span></div>
                        <div class="d-flex font-family-base"><img src="{{ 'envelope.svg' | asset_url }}"/><span class="ms-1">support@kachava.com</span></div>
                      </div>
                    </div>                  
                  </div>
                </div>
            </div>  
        </div>
    </section>
{% endif %}

{% schema %}
{
  "name": "FAQ Block",
  "class": "dynamic-faq-block",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "Enable?"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Block Title",
      "default": "FAQ"
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "FAQ",
      "settings": [
        {
          "type": "liquid",
          "id": "title",
          "label": "Question"
        },
        {
          "type": "liquid",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Block",
      "category": "Content"
    }
  ]
}
{% endschema %}

        },
        {
          "value": "horizontal-filters",
          "label": "Topbar"
        }
      ],
      "default": "default"
    },
    {
      "type": "select",
      "id": "price_filter_layout",
      "label": "Price Filter Layout",
      "options": [
        {
          "value": "list",
          "label": "List"
        },
        {
          "value": "default",
          "label": "Range"
        },
        {
          "value": "range_slider",
          "label": "Range Slider"
        }
      ],
      "default": "default"
    },
    {

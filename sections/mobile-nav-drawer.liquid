                                                {%- if settings.no_image.width >= 320 -%}{{ settings.no_image | image_url: width: 320 }} 320w,{%- endif -%}
                                                {%- if settings.no_image.width >= 460 -%}{{ settings.no_image | image_url: width: 460 }} 460w,{%- endif -%}"

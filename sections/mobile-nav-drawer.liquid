                                    <a href="{{ settings.social_tiktok_link }}" title="Tiktok" rel="nofollow" aria-label="Tiktok"><span class="ox-tiktok"></span></a>
                                </li>
                                {% endif %}
                                {% if section.settings.social_icon_youtube %}
                                <li class="list-inline-item">
                                    <a href="{{ settings.social_youtube_link }}" title="Youtube" rel="nofollow" aria-label="Youtube"><span class="ox-youtube"></span></a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endif %}
            </div>
            {% comment %} <div class="container" style="margin-top:10px; padding:0">
                <div class="row">
                    <div class="col drawer_account"><img src="{{ 'account.svg' | asset_url }}" style="margin-top:5px"/></span><p>Account</p></div>
                    <div class="col drawer_off"><p>GET 10% OFF</p></div>
                </div>
            </div>  {% endcomment %}
        </div>
    </div>
</mobile-nav>

